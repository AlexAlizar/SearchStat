<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="alizarchik.alex.searchstat">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.impl.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.impl.GeneralStatActivity"
            android:parentActivityName=".view.impl.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.impl.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.impl.SignUpActivity"
            android:parentActivityName=".view.impl.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.impl.DailyStatActivity"
            android:parentActivityName=".view.impl.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.impl.GraphActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>